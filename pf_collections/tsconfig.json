{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "sourceMap": false,
        "strict": false,
        "alwaysStrict": true,
        "watch":false,
        "outDir": "dist/",
        "experimentalDecorators":true,
        "emitDecoratorMetadata":true,
        "declaration": true,
        "declarationDir": "@types",
        "removeComments": false
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "@types",
        "test"
    ]
}