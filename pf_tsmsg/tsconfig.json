{
    "compilerOptions": {
        "declaration": true,
        "target": "ES2020",
        "module": "ES2020",
        "strict": true,
        "strictNullChecks": false,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "outDir": "build/",
        "rootDir": "./src"
    },
    "include": [
        "./src/**/*",
        "lib"
    ],
    "exclude": [
        "node_modules"
    ]
}