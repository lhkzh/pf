{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "sourceMap": false,
        "strict": false,
        "alwaysStrict": true,
        "watch": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "declarationDir": "@types",
        "removeComments": false,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "outDir": "build/",
        "rootDir": "./src"
    },
    "include": [
        "./src/**/*",
        "lib"
    ],
    "exclude": [
        "node_modules"
    ]
}